<% provide(:title, "Task index") %>

<h1>タスク一覧</h1>
<div class ="row">
  <div class = "col-md-12 col-md-offset-1">
    <table class = "table table-condensed table-hover", id = "table-tasks">
    
      <thead>
        <tr>
          <th class="center"></th>
          <th class="center"></th>
          <td class="center"><%= link_to "タスク新規作成",new_user_task_path, class:"btn btn-primary btn-right" %></td>
        </tr>
        <div style = "margin-top: 10px"></div>
        <tr>
          <th>名称</th>
          <th class="center">作成日</th>
          <th class="center"></th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
        <tr>
          <td>
            <%= link_to task.name, user_task_path(@user,task_id) %>
          </td>
          <td>
            <%= task.create_at %>
          </td>
          <td>
            <%= link_to "編集", edit_user_task_path(@user,task_id), class:"btn btn-success" %>
            <%= link_to "削除", user_task_path(@user, task_id), method: :delete, data: { confirm: "削除してよろしいですか？" }, class:"btn btn-danger" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
  