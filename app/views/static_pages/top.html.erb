<% provide(:title, "Top") %>
<div class = "container">
  <div class = "row">
    <div class = "col-md-7">
      <div class = "center jumbotyon" id = "top-main">
        <h1 id ="top-main-title">TaskApp</h1>
        <p>TaskAppは簡易ToDo管理ツールです。</p>
        <p>↓↓初めてのご利用↓↓</p>
        <a class = "btn btn-lg btn-success" href = "/signup">アカウント作成</a>
        <div style = "margin-top: 10px">
          <% if !logged_in? %>
          <%= link_to "ゲストログイン（管理権限)", user_path(1), class:"btn btn-lg btn-danger" %>
          <%= link_to "ゲストログイン（一般権限)", @user_path, class:"btn btn-lg btn-warning" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class = "row">
      <div class = "col-md-4">
        <h1>ログイン</h1>
        <%= form_with(scope: :session, url:login_path, local: true ) do |f| %>
          <% if logged_in? %>
        
            <%= f.label :email, "メールアドレス", class: "label-login" %>
            <%= f.email_field :email, class: 'form-control', disabled:true %>
        
            <%= f.label :password, class: "label-login"%>
            <%= f.password_field :password, class: 'form-control', disabled:true %>
            
            <%= f.submit " ログイン", class: "btn btn-primary btn-block btn-login", disabled:true  %>
        
          <% else %>
        
            <%= f.label :email, "メールアドレス", class: "label-login" %>
            <%= f.email_field :email, class: 'form-control' %>
        
            <%= f.label :password, class: "label-login"%>
            <%= f.password_field :password, class: 'form-control' %>
        
            <%= f.label :remember_me, class: "checkbox inline checkbox-login", for: "remember-me" do %>
            <%= f.check_box :remember_me, id: "remember_me" %>
              <span>ログイン情報を記憶する</span>
            <% end %>
        
            <%= f.submit " ログイン", class: "btn btn-primary btn-block btn-login" %>
              <p>ユーザー登録がまたの場合は<%= link_to "こちら", signup_path %></p>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
