<% provide(:title, 'All Users') %>
<h1>ユーザー一覧</h1>

<div class = "col-md-10 col-md-offset-1">
 
  <table class = "table table-condensed table-hover" id = "table-users">
    <thead>
      <tr>
        <th><%= User.human_attribute_name :name %></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td>
          <% if user.admin? %>
            <%= link_to user.name, user %>
            <span class = "label label-primary label-user-division">管理者</span>
          <% else %>
            <%= link_to user.name, user %>
            <span class = "label label-success label-user-division">一般</span>
          <% end %>
        </td>
        <td align ="right">
          <% if !user.admin? %>
          <%= link_to "削除", user, method: :delete, data: {confirm: "#{user.name}削除して宜しいですか？"}, class: "btn btn-danger" %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
 
</div>